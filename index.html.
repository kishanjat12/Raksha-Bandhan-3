  <script>
    const nameInput = document.getElementById('senderName');
    const whatsappBtn = document.getElementById('whatsappShareBtn');
    const facebookBtn = document.getElementById('facebookShareBtn');
    const twitterBtn = document.getElementById('twitterShareBtn');
    const instagramBtn = document.getElementById('instagramShareBtn');

    function updateLinks() {
      const name = nameInput.value.trim() || '‡§Ü‡§™‡§ï‡•á ‡§Ö‡§™‡§®‡•á';
      const message = `${name} ‡§ï‡•Ä ‡§ì‡§∞ ‡§∏‡•á üéÅ ‡§∞‡§ï‡•ç‡§∑‡§æ‡§¨‡§Ç‡§ß‡§® ‡§ï‡•Ä ‡§¢‡•á‡§∞‡•ã‡§Ç ‡§∂‡•Å‡§≠‡§ï‡§æ‡§Æ‡§®‡§æ‡§è‡§Ç!\n‡§≠‡§æ‡§à-‡§¨‡§π‡§® ‡§ï‡§æ ‡§∞‡§ø‡§∂‡•ç‡§§‡§æ ‡§∏‡§¶‡§æ ‡§Ö‡§ü‡•Ç‡§ü ‡§∞‡§π‡•á! üéâ\n\n‡§¶‡•á‡§ñ‡•á‡§Ç: https://raksha-bandhan-3-gci8.vercel.app/`;
      const encodedMessage = encodeURIComponent(message);

      whatsappBtn.href = `https://wa.me/?text=${encodedMessage}`;
      facebookBtn.href = `https://www.facebook.com/sharer/sharer.php?u=https://raksha-bandhan-3-gci8.vercel.app/&quote=${encodedMessage}`;
      twitterBtn.href = `https://twitter.com/intent/tweet?text=${encodedMessage}`;
      instagramBtn.href = `https://www.instagram.com/direct/new/`;
    }

    nameInput.addEventListener('input', updateLinks);
    updateLinks();
  </script>
